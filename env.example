# Copy to .env and edit values as needed

# === Gemini (LLM + Embeddings) ===
# Set your key to enable Gemini features
GEMINI_API_KEY=
# Enable LLM-based PII detection inside the app (true/false)
USE_GEMINI=false
# Model names
GEMINI_MODEL=gemini-1.5-pro
GEMINI_EMBED_MODEL=text-embedding-004

# === Redaction behavior toggles ===
# Aggressively remove handle-like tokens (usernames, slugs) while preserving emails/URLs
REDACT_STRICT=false
# Aggressively remove inline person names detected by regex+heuristics
AGGRESSIVE_NAME_SCRUB=false

# === Chroma (Vector Store) ===
CHROMA_PERSIST_DIR=data/chroma
CHROMA_COLLECTION=pii_sentinel

# === Optional UI toggles ===
# Enable retrieval benchmark UI at /bench
ENABLE_BENCH=false
